<script>
 var handler = function(event){
   $('#testoutput')[0].innerHTML = jc.toHtml(event.target.outerHTML);
   $('#event')[0].innerHTML = jc.inspect(event).span()};
 $('#testedit').keyup(handler).keydown(handler).keypress(handler);

 $('#display').toggle(
   function show(event){
     var links = $('#links')
       .empty()
       .css('top',$(event.target).offset().top+10)
       .css('left',$(event.target).offset().left+50);
     $('[data-topic=link]').each(
       function(i,e){
         var l$ = $('<div>'+$(e).text()+'</div>');
         l$.click(function(){e.scrollIntoView()});
         links.append(l$);
       }
     );
     $('#links').slideDown()},
   function hide(){
     $('#links').slideUp()}
 );
